<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="header">
					<h4 class="title">Websites List</h4>
					<p class="category">List containing registered websites</p>
					<%= link_to 'New Website', new_website_path, class: "btn btn-info btn-fill pull-right" %>
				</div>
				<div class="content table-responsive table-full-width">
					<table class="table table-hover table-striped">
						<thead>
							<th>Name</th>
							<th>Link</th>
							<th>Logo</th>
							<th>Status</th>
							<th colspan="3"></th>
						</thead>
						<tbody>
							<% @websites.each do |website| %>
								<tr>
									<td><%= website.name %></td>
									<td><%= website.link %></td>
									<td><%= website.logo %></td>
									<td><%= website.status %></td>
									<td>
										<%= link_to(website, class: "btn btn-primary") do %>
											<i class="fa fa-eye"></i>
										<% end %>
									</td>
									<td>
										<%= link_to(edit_website_path(website), class: "btn btn-info") do %>
											<i class="fa fa-edit"></i>
										<% end %>
									</td>
									<td>
										<%= link_to website, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
											<i class="fa fa-times"></i>
										<% end %>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				
				<br>

				
			</div>
		</div>
	</div>
</div>

<p id="notice"><%= notice %></p>