<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="header">
					<h4 class="title">Categories List</h4>
					<p class="category">List containing registered categories</p>
					<%= link_to 'New Category', new_category_path, class: "btn btn-info btn-fill pull-right" %>
				</div>
				<div class="content table-responsive table-full-width">
					<table class="table table-hover table-striped">
						<thead>
							<th>Name</th>
							<th>Alert range</th>
							<th colspan="3"></th>
						</thead>
						<tbody>
							<% @categories.each do |category| %>
								<tr>
									<td><%= category.name %></td>
        					<td><%= category.alert_range %></td>
									<td>
										<%= link_to(category, class: "btn btn-primary") do %>
											<i class="fa fa-eye"></i>
										<% end %>
									</td>
									<td>
										<%= link_to(edit_category_path(category), class: "btn btn-info") do %>
											<i class="fa fa-edit"></i>
										<% end %>
									</td>
									<td>
										<%= link_to category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
											<i class="fa fa-times"></i>
										<% end %>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				
				<br>

				
			</div>
		</div>
	</div>
</div>

<p id="notice"><%= notice %></p>
