<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="header">
					<h4 class="title">Products List</h4>
					<p class="category">List containing registered products</p>
					<%= link_to 'New Product', new_product_path, class: "btn btn-info btn-fill pull-right" %>
				</div>
				<div class="content table-responsive table-full-width">
					<table class="table table-hover table-striped">
						<thead>
							<th>Description</th>
							<th>Image</th>
							<th>Last price</th>
							<th>Alert range</th>
							<th>Website</th>
							<th>Category</th>
							<th colspan="3"></th>
						</thead>
						<tbody>
							<% @products.each do |product| %>
								<tr>
									<td><%= link_to(product.description, product.link, target: "_blank") %></td>
									<td><%= image_tag(product.image, height: '132', width: '132') %></td>
									<td>R$ <%= product.last_price %></td>
									<td><%= product.alert_range %>%</td>
									<td><%= image_tag(product.website.logo, height: '80', width: '100')%></td>
									<td><%= product.category.name %></td>
									<td>
										<%= link_to(product, class: "btn btn-primary") do %>
											<i class="fa fa-eye"></i>
										<% end %>
									</td>
									<td>
										<%= link_to(edit_product_path(product), class: "btn btn-info") do %>
											<i class="fa fa-edit"></i>
										<% end %>
									</td>
									<td>
										<%= link_to product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
											<i class="fa fa-times"></i>
										<% end %>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				
				<br>

				
			</div>
		</div>
	</div>
</div>

<p id="notice"><%= notice %></p>
