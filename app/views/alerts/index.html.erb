<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="header">
					<h4 class="title">Alerts List</h4>
					<p class="category">List containing registered alerts</p>
					<%= link_to 'Check Alerts', check_alerts_path, class: "btn btn-info btn-fill pull-right" %>
				</div>
				<div class="content table-responsive table-full-width">
					<table class="table table-hover table-striped">
						<thead>
							<th>Image</th>
							<th>Description</th>
							<th>Old Price</th>
							<th>Last Price</th>
							<th>Mail Sent</th>
							<th colspan="3"></th>
						</thead>
						<tbody>
							<% @alerts.each do |alert| %>
								<tr>
									<td><%= image_tag(alert.image, width: '132', height: '132') %></td>
									<td><%= link_to(alert.description, alert.link, target: "_blank") %></td>
									<td>R$ <%= alert.old_price %></td>
									<td>R$ <%= alert.last_price %></td>
									<td>
										<% if alert.mail_sent %>
											<i class="fa fa-circle text-success"></i>
										<% else %>
											<i class="fa fa-circle text-danger"></i>
										<% end %>
									</td>
											
									<td>
										<%= link_to(alert, class: "btn btn-primary") do %>
											<i class="fa fa-eye"></i>
										<% end %>
									</td>
									<td>
										<%= link_to alert, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
											<i class="fa fa-times"></i>
										<% end %>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>				
				<br>	
			</div>
		</div>
	</div>
</div>

<p id="notice"><%= notice %></p>
