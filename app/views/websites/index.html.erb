<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="header">
					<h4 class="title">Websites List</h4>
					<p class="category">List containing registered websites</p>
				</div>
				<div class="content table-responsive table-full-width">
					<table class="table table-hover table-striped">
						<thead>
							<th>Name</th>
							<th>Link</th>
							<th>Logo</th>
							<th>Regular price tag</th>
							<th>Discounted price tag</th>
							<th>Product description tag</th>
							<th>Product image tag</th>
							<th>Status</th>
							<th colspan="3"></th>
						</thead>
						<tbody>
							<% @websites.each do |website| %>
								<tr>
									<td><%= website.name %></td>
									<td><%= website.link %></td>
									<td><%= website.logo %></td>
									<td><%= website.regular_price_tag %></td>
									<td><%= website.discounted_price_tag %></td>
									<td><%= website.product_description_tag %></td>
									<td><%= website.product_image_tag %></td>
									<td><%= website.status %></td>
									<td><%= link_to 'Show', website %></td>
									<td><%= link_to 'Edit', edit_website_path(website) %></td>
									<td><%= link_to 'Destroy', website, method: :delete, data: { confirm: 'Are you sure?' } %></td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
				
				<br>

				<%= link_to 'New Website', new_website_path %>
			</div>
		</div>
	</div>
</div>

<p id="notice"><%= notice %></p>