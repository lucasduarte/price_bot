<%= form_for(@product) do |f| %>
	<div class="row">
		<div class="col-md-12">
			<% if @product.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

					<ul>
					<% @product.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
					</ul>
				</div>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4">
			<div class="form-group">
				<%= f.label :description %>
				<%= f.text_field :description, class: "form-control", placeholder: "Description" %>
			</div>
		</div>
		
		<div class="col-md-8">
			<div class="form-group">
				<%= f.label :link %>
				<%= f.text_field :link, class: "form-control", placeholder: "Link" %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-4">
			<div class="form-group">
				<%= f.label :image %>
				<%= f.text_field :image, class: "form-control", placeholder: "Image" %>
			</div>
		</div>
		
		<div class="col-md-4">
			<div class="form-group">
				<%= f.label :last_price %>
				<%= f.text_field :last_price, class: "form-control", placeholder: "Last Price", disabled: "true" %>
			</div>
		</div>
		
		<div class="col-md-4">
			<div class="form-group">
				<%= f.label :alert_range %>
				<%= f.text_field :alert_range, class: "form-control", placeholder: "Alert Range" %>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<%= f.label :website_id %>
				<%= f.collection_select :website_id, @websites,:id , :name, {}, {:class => 'form-control'} %>
			</div>
		</div>
		
		<div class="col-md-6">
			<div class="form-group">
				<%= f.label :category_id %>
				<%= f.collection_select :category_id, @categories,:id , :name, {}, {:class => 'form-control'} %>
			</div>
		</div>
	</div>

  <div class="actions">
    <%= f.submit class: "btn btn-info btn-fill" %>
  </div>
<% end %>