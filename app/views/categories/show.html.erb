<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="header">
					<h4 class="title">Category Info</h4>
				</div>
				<div class="content">			
					<p id="notice"><%= notice %></p>

					<p>
						<strong>Name:</strong>
						<%= @category.name %>
					</p>

					<p>
						<strong>Alert range:</strong>
						<%= @category.alert_range %>
					</p>
					
				</div>
				<%= link_to 'Edit', edit_category_path(@category) %> |
				<%= link_to 'Back', categories_path %>
			</div>
		</div>	
	</div>	
</div>




