<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="header">
					<h4 class="title">Alerts List</h4>
					<p class="category">List containing registered alerts</p>
				</div>
				<div class="content table-responsive table-full-width">
					<table class="table table-hover table-striped">
						<thead>
							<th>Image</th>
							<th>Description</th>
							<th>Link</th>
							<th>Old Price</th>
							<th>Last Price</th>
							<th>Mail Sent</th>
							<th colspan="3"></th>
						</thead>
						<tbody>
							<% @alerts.each do |alert| %>
								<tr>
									<td><%= alert.image %></td>
									<td><%= alert.description %></td>
									<td><%= alert.link %></td>
									<td><%= alert.old_price %></td>
									<td><%= alert.last_price %></td>
									<td><%= alert.mail_sent %></td>
									<td>
										<%= link_to(alert, class: "btn btn-primary") do %>
											<i class="fa fa-eye"></i>
										<% end %>
									</td>
									<td>
										<%= link_to alert, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
											<i class="fa fa-times"></i>
										<% end %>
									</td>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>				
				<br>	
			</div>
		</div>
	</div>
</div>

<p id="notice"><%= notice %></p>
